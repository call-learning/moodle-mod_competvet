{{!
    @template mod_competvet/view/todos


    Example context (json):
    {

    }
}}
<div id="managetodos" data-locked="{{locked}}" class="manageplanning manage" data-region="managetodos" data-cm-id="{{cmid}}" data-user-id="{{userid}}">
        <div class="alert alert-warning d-none" data-empty-todos="true">
            {{#str}}todo:notodos, mod_competvet{{/str}}
        </div>

    <div>
        <div class="competvet-view-todos">
            <table class="table">
                <thead data-empty-todos="false" class="d-none">
                <tr>
                    <th scope="col"><input type="checkbox" id="selectAll" data-radio-action="selectall"></th>
                    <th scope="col">{{#str}}todo:planning, mod_competvet{{/str}}</th>
                    <th scope="col">
                        <div class="d-flex">
                        {{#str}}todo:date, mod_competvet{{/str}}
                            <div class="sort d-flex ml-2">
                                <a href="#" class="sort-date d-none" data-sort="asc"><i class="fa fa-sort-asc"></i></a>
                                <a href="#" class="sort-date" data-sort="desc"><i class="fa fa-sort-desc"></i></a>
                            </div>
                        </div>
                    </th>
                    <th scope="col">{{#str}}todo:targetuser, mod_competvet{{/str}}</th>
                    <th scope="col">{{#str}}todo:action, mod_competvet{{/str}}</th>
                    <th scope="col">{{#str}}todo:status, mod_competvet{{/str}}</th>
                    <th scope="col">{{#str}}todo:delete, mod_competvet{{/str}}</th>
                </tr>
                </thead>
                <tbody data-region="todos">
                </tbody>
            </table>
            <button id="deleteSelected" class="btn btn-sm btn-danger d-none" data-empty-todos="false" data-button-action="deleteselected">
                {{#str}}todo:deleteselected, mod_competvet{{/str}}
            </button>
        </div>
    </div>
</div>
{{#js}}
require(['mod_competvet/local/manager/manager_app_todos'], function(todos) {
    todos.init();
});
{{/js}}