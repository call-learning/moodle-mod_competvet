{{!
    @template mod_competvet/view/planning


    Example context (json):
    {
        'usersbytype': [
            {
                'usertype': 'teacher',
                'label': 'Observers',
                'users': [
                    {
                        'fullname': 'Observer 1',
                        'userpictureurl': 'http://localhost/moodle/pluginfile.php/1/user/icon/f1',
                    },
                    {
                        'fullname': 'Observer 2',
                        'userpictureurl': 'http://localhost/moodle/pluginfile.php/2/user/icon/f1',
                    }
                ]
            },
            {
                'usertype': 'student',
                'label': 'Students - Group XY',
                'users': [
                    {
                        'fullname': 'Student 1',
                        'userpictureurl': 'http://localhost/moodle/pluginfile.php/3/user/icon/f1',
                        'viewurl': 'http://localhost/moodle/user/view.php?id=3'
                    },
                    {
                        'fullname': 'Student 2',
                        'userpictureurl': 'http://localhost/moodle/pluginfile.php/4/user/icon/f1',
                        'viewurl': 'http://localhost/moodle/user/view.php?id=4'
                    }
                ]
            }
        ]
    }
}}
<div class="competvet-view-planning">
    <div class="accordion" id="users-accordion">
        {{#usersbytype}}
            <div class="card">
                <div class="card-header" id="competvet-view-users-heading-{{usertype}}">
                    <h2 class="mb-0">
                        <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#competvet-view-users-{{usertype}}"
                                aria-expanded="true" aria-controls="competvet-view-users-{{usertype}}">
                            {{label}}
                        </button>
                    </h2>
                </div>
                <div id="competvet-view-users-{{usertype}}" class="collapse show" aria-labelledby="competvet-view-users-heading-{{usertype}}" data-parent="#users-accordion">
                    <div class="card-body">
                        {{#users}}
                            {{> mod_competvet/view/user_info}}
                        {{/users}}
                    </div>
                </div>
            </div>
        {{/usersbytype}}
    </div>
</div>