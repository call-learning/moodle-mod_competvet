{{!
    @template mod_competvet/view/user_info


    Example context (json):
    {
        "id": 1,
        "userpictureurl": "http://localhost/moodle/pluginfile.php/1/user/icon/f1",
        "fullname": "Observer 1",
        "viewurl": "http://localhost/moodle/user/view.php?id=1",
        "stats": [
            {
                "nbdone": 1,
                "nbrequired": 2,
                "label": "Observations"
            }
        ]
    }
}}
<div class="user-info container m-3 py-1">

    <div data-user-id="{{id}}" class="d-flex align-items-center">
        <div class="btn btn-link text-body">
            <img src="{{userpictureurl}}" alt="{{label}}" class="userpicture">
            {{#viewurl}}
                <a href="{{viewurl}}"><span>{{fullname}}</span></a>
            {{/viewurl}}
            {{^viewurl}}
                <span>{{fullname}}</span>
            {{/viewurl}}
            {{#rolename}}
                <span class="badge badge-secondary">{{.}}</span>
            {{/rolename}}
        </div>
        <div class="d-none asked icon-no-margin ml-3">
            {{#pix}}i/grade_correct, core{{/pix}}
            {{#str}}observation:asked, mod_competvet{{/str}}
        </div>
    </div>
    <div>
        {{#stats}}
            <span><span class="badge badge-primary badge-pill">{{nbdone}}/{{nbrequired}}</span></span> <span class="small">{{label}}</span>
        {{/stats}}
    </div>
</div>