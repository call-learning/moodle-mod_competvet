{{!
    @template mod_competvet/view/eval_content
    Example context (json):
    {
        "criteria": [
            {
                "criterionname": "Criterion 1",
                "grade": "A",
                "comment": "Good",
                "level": 1
            },
            {
                "criterionname": "Criterion 2",
                "grade": "B",
                "comment": "Bad",
                "level": 2
            }
        ]
    }
}}
<div class="eval-content">
    <table class="table table-striped table-bordered table-condensed">
        <thead>
        <tr>
            <th>{{#str}}criterion, mod_competvet{{/str}}</th>
            <th>{{#str}}grade, mod_competvet{{/str}}</th>
            <th>{{#str}}comment, mod_competvet{{/str}}</th>
        </tr>
        </thead>
        <tbody>
            {{#criteria}}
                <tr>
                    <td class="px-{{level}}">{{criterionname}}</td>
                    <td>{{grade}}</td>
                    <td>{{comment}}</td>
                </tr>
            {{/criteria}}
        </tbody>
    </table>
</div>