{{!
    @template mod_competvet/view/observation_card


    Example context (json):
    {
        "userpictureurl": "http://localhost/moodle/pluginfile.php/1/user/icon/f1",
        "fullname": "Observer 1",
        "viewurl": "http://localhost/moodle/user/view.php?id=1",
        "evaluationtime": 1619712000
    }
}}
<div class="container ml-0 my-3">
    <div class="card w-50">
        <div class="card-header">
            <div>
                <img src="{{userpictureurl}}" class="rounded-circle" width="50" height="50" alt="{{#str}}pictureof, core, {{fullname}}{{/str}}">
                <a href="{{viewurl}}"><span>{{fullname}}</span></a>
            </div>
        </div>
        <div class="card-body d-flex flex-column">
            <span class="card-text">{{#userdate}} {{{evaluationtime}}}, {{#str}} strftimedatetime, core_langconfig {{/str}}{{/userdate}}</span>
            <a href="{{viewurl}}" class="btn btn-primary align-self-end">{{#str}} view {{/str}}</a>
        </div>
    </div>
</div>