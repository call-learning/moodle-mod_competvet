{{#evaluation-results}}
    {{^evaluations}}
        <div class="alert alert-info w-50 mx-auto ">
            {{#str}} noevaluations, mod_competvet {{/str}}
        </div>
    {{/evaluations}}
    <div class="eval header">
        <div class="col1">
        </div>
        {{#evaluations.0}}
            {{#grades}}
                <span class="col3">
                    {{{gradername}}}
                </span>
            {{/grades}}
        {{/evaluations.0}}
    </div>
    {{#evaluations}}
        <div class="eval">
            <div class="col1">
                <div class="description mb-2"><strong>{{name}}</strong></div>
            </div>
            {{#grades}}
                <div class="col3">
                    {{value}}
                </div>
            {{/grades}}
        </div>
    {{/evaluations}}
    <div class="evalcomments d-flex row">
        <div class="col-md-6">
            {{#comments}}
                {{>mod_competvet/comment}}
            {{/comments}}
        </div>
    </div>
{{/evaluation-results}}