{{#certification-results}}
    <div class="certif header">
        <div class="col1">
        </div>
        <div class="col2">
            <div class="description mb-2 d-flex justify-content-end"><strong>{{#str}}confidencelevel, mod_competvet{{/str}}</strong></div>
        </div>
        <div class="col3">
            <div class="description mb-2"><strong>{{#str}}realised, mod_competvet{{/str}}</strong></div>
        </div>
        <div class="col4">
            <div class="description mb-2"><strong>{{#str}}verified, mod_competvet{{/str}}</strong></div>
        </div>
    </div>
    {{#certifications}}
        <div class="certif">
            <div class="col1">
                <div class="description mb-2 position-relative d-flex align-items-center">
                    {{#declid}}
                        {{< mod_competvet/expandcollapse}}
                            {{$id}}{{declid}}{{/id}}
                        {{/ mod_competvet/expandcollapse}}
                    {{/declid}}
                    <strong>{{label}}</strong>
                </div>
                <div class="collapse pl-5 ml-2 show" id="collapse{{declid}}">
                    <div>
                        {{#feedback}}
                            {{> mod_competvet/comment}}
                        {{/feedback}}
                    </div>
                    <div>
                        {{#validations}}
                            {{#feedback}}
                                {{> mod_competvet/comment}}
                            {{/feedback}}
                        {{/validations}}
                    </div>
                    <div class="actions d-flex justify-content-end">
                    {{#isstudent}}
                        <button class="btn btn-sm btn-outline-secondary" data-action="cert-decl-student" data-id="{{criterionid}}" data-decl-id="{{declid}}">
                            {{#str}}declarelevel, competvet{{/str}}
                        </button>
                    {{/isstudent}}
                    {{#isevaluator}}
                        <button class="btn btn-sm btn-outline-secondary" data-action="cert-decl-evaluator" data-id="{{criterionid}}" data-decl-id="{{declid}}">
                            {{#str}}validate, competvet{{/str}}
                        </button>
                    {{/isevaluator}}
                    </div>
                </div>
            </div>
            <div class="col2 d-flex justify-content-end">
                {{#level}}<span class="font-weight-bold">{{level}}</span><span class="mx-2">/</span><span>{{total}}</span>{{/level}}
            </div>
            <div class="col3">
                {{#realised}}
                    <i class="fa fa-check text-success" aria-hidden="true"></i>
                    <span class="sr-only">{{#str}}realised, competvet{{/str}}</span>
                {{/realised}}
                {{#notrealised}}
                    <i class="fa fa-times text-danger" aria-hidden="true"></i>
                    <span class="sr-only">{{#str}}notrealised, competvet{{/str}}</span>
                {{/notrealised}}
            </div>
            <div class="col4">
                {{#validated}}
                    <i class="fa fa-check text-success" aria-hidden="true"></i>
                    <span class="sr-only">{{#str}}verified, competvet{{/str}}</span>
                {{/validated}}
                {{#notvalidated}}
                    <i class="fa fa-times text-danger" aria-hidden="true"></i>
                    <span class="sr-only">{{#str}}notverified, competvet{{/str}}</span>
                {{/notvalidated}}
                {{#notreached}}
                    <i class="fa fa-times text-danger" aria-hidden="true"></i>
                    <span class="sr-only">{{#str}}notrealised, competvet{{/str}}</span>
                {{/notreached}}
            </div>
        </div>
    {{/certifications}}
{{/certification-results}}