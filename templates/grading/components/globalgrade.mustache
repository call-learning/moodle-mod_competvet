{{#globalgrade}}
    <div class="user-grade {{#validated}}was-validated{{/validated}}">
        <div class="h4 text-center border-bottom pb-2">{{#str}}evaluation, mod_competvet{{/str}}</div>
        <div class="d-flex">
            <div class="form-group">
                <label >
                    {{#str}}suggestedgrade, mod_competvet{{/str}} :
                </label>
                <div class="d-flex align-items-center w-100">
                    <div class="font-weight-bold">{{suggestedgrade}}</div>
                    {{#suggestedgrade}}
                        <button type="button" class="btn btn-icon border-info icon-no-margin ml-5" data-toggle="popover" data-placement="bottom" data-html="true" data-content="{{{gradecalculation}}}">
                            {{#pix}}i/info{{/pix}}
                        </button>
                    {{/suggestedgrade}}
                </div>
            </div>
            <div class="form-group">
                <label for="finalgrade">
                    {{#str}}finalgrade, mod_competvet{{/str}} :
                </label>
                <div>
                    <select class="custom-select d-none ml-auto" id="finalgradeold" name="finalgradeold" data-field="finalgradeold">
                        {{#finalgradeoptions}}
                            <option value="{{key}}" {{#selected}}selected{{/selected}}>{{value}}</option>
                        {{/finalgradeoptions}}
                    </select>
                    <input
                        type="number"
                        class="form-control w-auto{{!
                        }}{{#gradesuccess}} is-valid{{/gradesuccess}}{{!
                        }}{{#gradeerror}} is-invalid{{/gradeerror}}"
                        name="finalgrade"
                        data-field="finalgrade"
                        value="{{finalgrade}}"
                        min="0"
                        max="100"
                        step="1"
                    >
                </div>
            </div>
            <div class="form-group">
                <label>
                    {{#str}}comment, mod_competvet{{/str}} :
                </label>
                <textarea
                    class="form-control{{!
                    }}{{#comment}}{{!
                        }}{{#commentsuccess}} is-valid{{/commentsuccess}}{{!
                        }}{{#commenterror}} is-invalid{{/commenterror}}{{!
                    }}{{/comment}}"
                    name="comment"
                    data-action="comment"
                    data-grade-id="0"
                    data-criterion-id="4">{{comment}}</textarea>
            </div>
            <div class="form-group">
                <label>&nbsp;</label>
                <div>
                    <button type="submit" class="btn btn-primary" data-action="save">
                        {{#str}}submit, mod_competvet{{/str}}
                    </button>
                </div>
            </div>
        </div>
    </div>
{{/globalgrade}}