<div class="nav-container">
    <ul class="nav nav-tabs nav-fill mt-4" id="myTab" role="tablist">
        {{#haseval}}
        <li class="nav-item ml-3" role="presentation">
            <button class="nav-link certifheading w-100 active" id="eval-tab" data-toggle="tab" data-target="#evaluate" type="button" role="tab" aria-controls="evaluate" aria-selected="true">
                {{> mod_competvet/grading/svg/chat}}
                {{#str}}evaluate, mod_competvet{{/str}}
            <div class="grade-tab-indicator" data-region="grade-tab-eval"></div>
            <div class="grade-tab-indicator-letter lettergrade sm" data-region="grade-tab-eval-letter"></div>
            </button>
        </li>
        {{/haseval}}
        {{#hascertif}}
        <li class="nav-item" role="presentation">
            <button class="nav-link certifheading w-100 {{^haseval}}active{{/haseval}}" id="certify-tab" data-toggle="tab" data-target="#certify" type="button" role="tab" aria-controls="certify" aria-selected="false">
                {{> mod_competvet/grading/svg/certif}}
                {{#str}}certify, mod_competvet{{/str}}
                <div class="grade-tab-indicator" data-region="grade-tab-certif"></div>
                <div class="grade-tab-indicator-letter lettergrade sm" data-region="grade-tab-certif-letter"></div>
            </button>
        </li>
        {{/hascertif}}
        {{#hascase}}
        <li class="nav-item mr-3" role="presentation">
            <button class="nav-link certifheading w-100 {{^haseval}}{{^hascertif}}active{{/hascertif}}{{/haseval}}" id="list-tab" data-toggle="tab" data-target="#list" type="button" role="tab" aria-controls="list" aria-selected="false">
                {{> mod_competvet/grading/svg/list}}
                {{#str}}list, mod_competvet{{/str}}
                <div class="grade-tab-indicator" data-region="grade-tab-list"></div>
                <div class="grade-tab-indicator-letter lettergrade sm" data-region="grade-tab-list-letter"></div>
            </button>
        </li>
        {{/hascase}}
    </ul>
</div>
<div class="tab-content" id="myTabContent">
    {{#haseval}}
    <div class="tab-pane fade w-100 show active" id="evaluate" role="tabpanel" aria-labelledby="eval-tab">
        <div class="tab-eval tab-inner">
            {{> mod_competvet/grading/tabs/tab/evaluate}}
        </div>
    </div>
    {{/haseval}}
    {{#hascertif}}
    <div class="tab-pane w-100 fade {{^haseval}}show active{{/haseval}}" id="certify" role="tabpanel" aria-labelledby="certify-tab">
        <div class="tab-certify tab-inner">
            {{> mod_competvet/grading/tabs/tab/certify}}
        </div>
    </div>
    {{/hascertif}}
    {{#hascase}}
    <div class="tab-pane w-100 fade {{^haseval}}{{^hascertif}}show active{{/hascertif}}{{/haseval}}" id="list" role="tabpanel" aria-labelledby="list-tab">
        <div class="tab-list tab-inner">
            {{> mod_competvet/grading/tabs/tab/list}}
        </div>
    </div>
    {{/hascase}}
</div>